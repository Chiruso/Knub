{
  "name": "knub",
  "version": "30.0.0-beta.0",
  "description": "A bot framework for Discord",
  "author": "Miikka Virtanen <contact@mivir.fi>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": "dist/index.js",
  "scripts": {
    "test": "mocha --exit -r ts-node/register src/**/*.test.ts -- --trace-warnings",
    "build": "shx touch dist && shx rm -r dist && tsc --sourceMap false",
    "preversion": "npm run test",
    "prepublishOnly": "npm run test && npm run build",
    "watch": "shx touch dist && shx rm -r dist && tsc --watch",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "knub-command-manager": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "ts-essentials": "^2.0.12"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.36",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "shx": "^0.3.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.3"
  },
  "peerDependencies": {
    "eris": "^0.13.0"
  },
  "files": [
    "/dist/**/!(*.test.js)"
  ]
}
