{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "eris": ["eris", "node_modules/eris-typings/index"],
      "minimist-string": ["minimist-string", "@types/minimist-string"]
    },
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
